@model IEnumerable<JackBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Jack's Blog";
}

<div class="container">
    <header class="py-5 text-center">
        <h1 class="display-4">Jack's Blog</h1>
        <p class="lead">Welcome to my old-fashioned blog built with ASP.NET Core</p>
    </header>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            @foreach (var post in Model)
            {
                <article class="card mb-5">
                    <div class="card-body">
                        <h2 class="card-title">@post.Title</h2>
                        <p class="card-text small text-muted">
                            Posted on @post.PublishedDate.ToString("MMMM dd, yyyy") by @post.Author
                        </p>
                        <p class="card-text">@post.Content</p>
                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary">Read More &rarr;</a>
                    </div>
                </article>
            }
        </div>
    </div>
</div>
